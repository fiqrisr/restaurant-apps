# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{ts,js,html,css}]
indent_style = tab
indent_size = 4

[{package.json,.travis.yml,.yarnrc.yml,tsconfig.json}]
indent_style = tab
indent_size = 2
